
@{
    ViewBag.Title = "Customer Details";
}
@{
    Layout = null;
}
@model Helperland_integration.Models.User

<link rel="stylesheet" href="~/css/customerSetting_new.css">
@*--------------------------------------------------------------------------------------------------*@

    <div class="customer-setting" >
       
          <ul class="nav nav-pills mb-3" >
            <li class="nav-item">
              <a class="nav-link activeTab" id="customerDetails-tab" onclick="customerDetails()">My Details</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="customerAddress-tab" onclick="customerAddress()">My Addresses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="customerPassword-tab" onclick="customerPassword()">Change Password</a>
            </li>
          </ul>
          
        <div class="alert alert-success alert-dismissible fade show" id="detail-update-alert" style="display:none" role="alert">
                <strong>Your details successfully updated.</strong> 
                @*<div asp-validation-summary="ModelOnly" style="list-style-type:none;"></div>*@
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
        </div>


            <div class="" id="customerDetails" >
              <form class="changeCusDetailForm" method="post" asp-action="customerDetails" asp-controller="CustomerDashboard" onsubmit="return jQueryAjaxPost(this);">
                <input type="hidden" asp-for="CreatedDate">
                <div class="form-row">
                  <div class="col-lg-4 col-md-4 col-sm-6">
                    <label for="">First Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="First name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-6">
                    <label for="">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Last name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-6">
                    <label for="">E-mail Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                </div>
                
                <div class="form-row">
                  <div class="col-lg-4 col-md-4 col-sm-6">
                    <label for="">Mobile Number</label>
                    <div class="phone-num">
                      <span class="country-code">+91</span>
                      <input asp-for="Mobile" class="form-control codenum" placeholder="Mobile Number">
                      <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-6">
                    <label for="">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="DOB">
                  </div>
                </div>

                <hr>

                <div class="form-row">
                  <div class="col-4">
                    <label for="">My Preferred Language</label>
                    <select class="form-control" style="width: 160px;" name="" id="">
                      <option value="English">English</option>
                      <option value="Gujarati">Gujarati</option>
                    </select>
                  </div>
                </div>

                <button class="btn saveDetailbtn mt-4" type="submit">Save</button>
              </form>
            </div>
            

            
            @*----------------------------------------------------------------------------------------------------------*@

            <div class="" style="display: none;" id="customerAddress">
            </div>

            @*----------------------------------------------------------------------------------------------------------*@
           
            <div class="" style="display: none;" id="customerPassword">
            </div>
    
            @*----------------------------------------------------------------------------------------------------------*@
     </div>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>