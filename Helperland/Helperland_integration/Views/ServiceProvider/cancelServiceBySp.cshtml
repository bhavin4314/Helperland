
@{
    Layout = null;
}
@model Helperland_integration.Models.ServiceRequest


      <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="">Cancel Service Request</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form asp-controller="ServiceProvider" asp-action="cancelServiceBySp" method="post">
                  <input type="hidden" asp-for="ServiceRequestId"/>
                  <p>Are you sure want to cancel service?</p>
                  <button class="btn cancelBtnModal mt-3" type="submit" style="width: 100%;">Cancel Now </button>
              </form>
            </div>
         
          </div>
        </div>