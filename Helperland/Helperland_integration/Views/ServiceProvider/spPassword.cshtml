
@{
    ViewBag.Title = "sp Password";
}
@{
    Layout = null;
}
@model Helperland_integration.ViewModel.ResetPasswordModel
        <div class="alert alert-success alert-dismissible fade show" id="password-update-alert" style="display:none" role="alert">
                <strong>Your password successfully updated.</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
        </div>
        <div class="alert alert-danger alert-dismissible fade show" id="password-notupdate-alert" style="display:none" role="alert">
                <strong>Your current password is incorrect.</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
        </div>

  <form class="password-form" method="post" asp-action="customerPassword" asp-controller="CustomerDashboard" onsubmit="return jQueryAjaxPost(this);">
                
                <div class="form-group">
                  <label for="">Old Password</label>
                  <input asp-for="CurrentPassword" class="password-change form-control" id="" placeholder="Current Password">
                  <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <label for="">New Password</label>
                  <input asp-for="Password" class="password-change form-control" id="" placeholder="Password">
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                  <label for="">Confirm Password</label>
                  <input asp-for="ConfirmPassword" class="password-change form-control" id="" placeholder="Confirm Password">
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn passwordbtn">Save</button>
    </form>


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>