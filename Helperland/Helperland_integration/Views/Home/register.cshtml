

@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}
@{
    ViewBag.Title = "User signUp";
}
@model Helperland_integration.ViewModel.UserViewModel


<link rel="stylesheet" href="~/css/register.css">

<!-- ---------------------------------register-page start------------------------------------------- -->

<section class="registration">
  <div class="container">
        @if (ViewBag.IsSuccess==true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Your registration successfully done.</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>   
        }
        @if (ViewBag.IsExistEmail==true)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>This email-id already exist try with another email-id.</strong> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>   
        }

    <h2 class="commonhead text-center" >Create Account</h2>
    <div class="design text-center">
      <div class="seprator-left "></div>
      <img src="~/images/forma-1-copy-5.png" alt="">
      <div class="seprator-right"></div>
    </div>

    <div class="register-form">
        <form method="post">
            <div class="row">
              <div class="col-lg-6 col-sm-12 user-register-input">
                  
                <input asp-for="FirstName" class="form-control" placeholder="First name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
              </div>
              <div class="col-lg-6 col-sm-12 user-register-input">
                <input asp-for="LastName" class="form-control" placeholder="Last name">
                <span asp-validation-for="LastName" class="text-danger"></span>
              </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-12 user-register-input">
                    <input asp-for="Email" class="form-control"  placeholder="Email address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>  
                <div class="col-lg-6 col-sm-12  user-register-input">
                    <div class="phone-num">
                        <span class="country-code">+91</span>
                        <input asp-for="Mobile" class="form-control codenum" placeholder="Mobile number">
                    </div>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-12 user-register-input">
                    
                  <input asp-for="Password" class="form-control" placeholder="Password">
                  <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-lg-6 col-sm-12 user-register-input">
                  <input asp-for="ConfirmPassword" class="form-control" placeholder="Repeat Password">
                  <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
              </div>
              
              <div class="form-check ">
                <input type="checkbox" asp-validation-for="" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1"> Yes, I would like to subscribe to the Helperland GmbH newsletter with vouchers, trends, promotions and individualized offers. I can unsubscribe from the newsletter at any time in the newsletter and in my customer account.</label>
              </div>
              <div class="form-check ">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">I agree to the terms and conditions of Helperland GmbH. </label>
              </div>
              <div class="form-check ">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">I have read the privacy policy .</label>
              </div>
              <div class="recaptcha">
                <img src="images/layer-20.png" class="img-fluid" alt="" srcset="">
              </div>
              <button type="submit" class="submit-btn btn btn-primary ">To Register</button>
              <p class="text-center">Already registered?<span><a href="" data-toggle="modal" data-target=".bd-login-modal-sm"> log in now </a></span></p>
          </form>
    </div>
    
</div>
</section>
<form class="login-part" asp-action="login" asp-controller="Home"  >
       
          <div class="modal fade bd-login-modal-sm login-hide" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" >
            <div class="modal-dialog modal-sm login-modal"  >
              <div class="modal-content" >

            <div class="alert alert-danger alert-dismissible fade show" id="login-alert" style="display:none" role="alert">
                <strong>Invalid username and password.</strong> 
                @*<div asp-validation-summary="ModelOnly" ></div>*@
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>   
                  
                <h2 class="mb-5">log in <span><img src="~/images/close.png" class="float-right close-click" alt="img"></span> </h2>
                <form method="post" data-ajax="true" data-ajax-success="loginError" >
                  <div class="form-group">
                    <input asp-for="Email" class="form-control" id="exampleInputEmail1"  placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span> 
                </div>
                  <div class="form-group">
                    <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Save on computer</label>
                  </div>
                  <button type="submit" class="btn btn-primary login-submit-btn">log in</button><br>
                  <a class="login-center-tag forgot-password-click" data-toggle="modal" data-target=".bd-forgot-modal-sm" onclick="hide_policy()" href="">Forgot Password?</a>
                  <p class="login-center-tag">Don't have an account yet? <span><a class=""  asp-controller="Home" asp-action="register">create Account</a></span></p>
          
                </form>
              </div>
            </div>
          </div>
</form>

<section class="password-forgot">
  <div class="modal fade bd-forgot-modal-sm forgot-hide" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <h2 class="mb-5">Forgot Password<span><img src="~/images/close.png" class="float-right close-click" alt="img"></span></h2>
        <form>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <button type="submit" class="btn btn-primary login-submit-btn">Send</button><br>
          <a class="login-center-tag login-click" href="" data-toggle="modal" data-target=".bd-login-modal-sm">log in now </a>
          
          
        </form>
      </div>
    </div>
  </div>
</section>


<!-- ---------------------------------register page end------------------------------------------- -->
