

@{
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}
    



<link rel="stylesheet" href="~/css/register.css">

<!-- ---------------------------------register-page start------------------------------------------- -->
<section class="registration">
  <div class="container">
    
    <h2 class="commonhead text-center" >Create Account</h2>
    <div class="design text-center">
      <div class="seprator-left "></div>
      <img src="~/images/forma-1-copy-5.png" alt="">
      <div class="seprator-right"></div>
    </div>

    <div class="register-form">
        <form>
            <div class="row">
              <div class="col-lg-6 col-sm-12 ">
                  
                <input type="text" class="form-control" placeholder="First name">
              </div>
              <div class="col-lg-6 col-sm-12">
                <input type="text" class="form-control" placeholder="Last name">
              </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                    <input type="text" class="form-control" placeholder="Email address">
                </div>  
                <div class="col-lg-6 col-sm-12 phone-num ">
                    <span class="country-code">+91</span>
                    <input type="text" class="form-control codenum" placeholder="Mobile number">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-12 ">
                    
                  <input type="text" class="form-control" placeholder="Password">
                </div>
                <div class="col-lg-6 col-sm-12">
                  <input type="text" class="form-control" placeholder="Repeat Password">
                </div>
              </div>
              
              <div class="form-check ">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1"> Yes, I would like to subscribe to the Helperland GmbH newsletter with vouchers, trends, promotions and individualized offers. I can unsubscribe from the newsletter at any time in the newsletter and in my customer account.</label>
              </div>
              <div class="form-check ">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">I agree to the terms and conditions of Helperland GmbH. </label>
              </div>
              <div class="form-check ">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">I have read the privacy policy .</label>
              </div>
              <div class="recaptcha">
                <img src="images/layer-20.png" class="img-fluid" alt="" srcset="">
              </div>
              <button type="submit" class="submit-btn btn btn-primary ">To Register</button>
              <p class="text-center">Already registered?<span><a href="" data-toggle="modal" data-target=".bd-login-modal-sm"> log in now </a></span></p>
          </form>
    </div>
    
</div>
</section>
<section class="login-part" id="login-part" >
  <div class="modal fade bd-login-modal-sm login-hide" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <h2 class="mb-5">log in <span><img src="~/images/close.png" class="float-right close-click" alt="img"></span> </h2>
        <form>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Save on computer</label>
          </div>
          <button type="submit" class="btn btn-primary login-submit-btn">log in</button><br>
          <a class="login-center-tag forgot-password-click" data-toggle="modal" data-target=".bd-forgot-modal-sm" onclick="hide_policy()" href="">Forgot Password?</a>
          <p class="login-center-tag">Don't have an account yet? <span><a class=""  asp-controller="Home" asp-action="register">create Account</a></span></p>
          
        </form>
      </div>
    </div>
  </div>
</section>

<section class="password-forgot">
  <div class="modal fade bd-forgot-modal-sm forgot-hide" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <h2 class="mb-5">Forgot Password<span><img src="~/images/close.png" class="float-right close-click" alt="img"></span></h2>
        <form>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <button type="submit" class="btn btn-primary login-submit-btn">Send</button><br>
          <a class="login-center-tag login-click" href="" data-toggle="modal" data-target=".bd-login-modal-sm">log in now </a>
          
          
        </form>
      </div>
    </div>
  </div>
</section>


<!-- ---------------------------------register page end------------------------------------------- -->
