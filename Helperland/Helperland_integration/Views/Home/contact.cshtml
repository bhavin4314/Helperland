<!-- ---------------------------------contact-form start------------------------------------------- -->
<section class="contact-form">
    <div class="container">
        <h2 class="text-center">Get in touch with us</h2>
        <form>
            <div class="row">
              <div class="col-lg-6 col-sm-12 ">
                  
                <input type="text" class="form-control" placeholder="First name">
              </div>
              <div class="col-lg-6 col-sm-12">
                <input type="text" class="form-control" placeholder="Last name">
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6 col-sm-12 phone-num ">
                <span class="country-code">+49</span>
                <input type="text" class="form-control codenum" placeholder="Mobile number">
              </div>
              <div class="col-lg-6 col-sm-12">
                <input type="text" class="form-control" placeholder="Email address">
              </div>
            </div>
            <select class="form-select form-control " aria-label="Default select example">
                <option selected>Subject</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            <div class="form-group txtarea">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Message"></textarea>
              </div>
              <button type="submit" class="btn btn-primary ">Submit</button>
          </form>
    </div>
</section>
<!-- ---------------------------------contact-form end------------------------------------------- -->



